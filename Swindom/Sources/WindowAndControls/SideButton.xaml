<UserControl x:Class="Swindom.SideButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Swindom"
             mc:Ignorable="d" >
    <Grid>
        <Button x:Name="BaseButton" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Height="32" Padding="3, 3, 10, 3" Click="BaseButton_Click">
            <StackPanel Orientation="Horizontal">
                <Image x:Name="BaseImage"/>
                <Label x:Name="BaseLabel" Margin="3,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
