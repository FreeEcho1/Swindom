<Window x:Class="Swindom.NumericCalculationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Swindom"
        mc:Ignorable="d"
        xmlns:Controls="clr-namespace:FreeEcho.FEControls;assembly=FEControls"
        Title="数値計算" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid Style="{StaticResource BackgroundGrid}">
        <GroupBox x:Name="RatioGroupBox" Header="比率" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,10,10" Padding="10">
            <Grid>
                <Controls:NumericUpDown x:Name="Ratio1NumericUpDown" HorizontalAlignment="Left" VerticalAlignment="Top" Width="160"  IsUseDecimal="True" NumberOfDecimalPlaces="2" Value="0"/>
                <Controls:NumericUpDown x:Name="Ratio2NumericUpDown" HorizontalAlignment="Left" VerticalAlignment="Top"  Width="160" IsUseDecimal="True" NumberOfDecimalPlaces="2" Value="0" Margin="0,29,30,0"/>
                <Controls:ImageButton x:Name="ChainImageButton" ImageSource="{DynamicResource UnattachedChainImage}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="20" Height="53" Margin="165,0,0,0"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
