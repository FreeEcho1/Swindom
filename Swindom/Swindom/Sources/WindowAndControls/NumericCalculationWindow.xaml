<Window x:Class="Swindom.NumericCalculationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Swindom"
        mc:Ignorable="d"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="数値計算" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid>
        <GroupBox x:Name="RatioGroupBox" Header="比率" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Padding="10">
            <Grid>
                <ui:NumberBox x:Name="Ratio1NumberBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="180"  Value="0" SpinButtonPlacementMode="Inline"/>
                <ui:NumberBox x:Name="Ratio2NumberBox" HorizontalAlignment="Left" VerticalAlignment="Top"  Width="180" Margin="0,37,0,0" Value="0" SpinButtonPlacementMode="Inline"/>
                <Button x:Name="ChainButton" HorizontalAlignment="Left" Height="53" Margin="185,0,0,0" Padding="2">
                    <Image x:Name="ChainImage" Source="/Resources/UnattachedChainDark.png"/>
                </Button>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
