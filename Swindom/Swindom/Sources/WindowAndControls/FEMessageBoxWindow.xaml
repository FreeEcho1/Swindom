<Window x:Class="Swindom.Sources.WindowAndControls.FEMessageBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Swindom.Sources.WindowAndControls"
        mc:Ignorable="d"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="" WindowStartupLocation="CenterOwner" SizeToContent="WidthAndHeight" ShowInTaskbar="False" WindowStyle="SingleBorderWindow" ResizeMode="NoResize">
    <StackPanel>
        <Label x:Name="MessageLabel" Margin="20,10,20, 10">
            <TextBlock x:Name="MessageTextBlock" TextWrapping="WrapWithOverflow"/>
        </Label>
        <StackPanel HorizontalAlignment="Center" Margin="5,10,5,10" Orientation="Horizontal">
            <Button x:Name="OkButton" Content="OK" MinWidth="40" Margin="5,0,0,0"/>
            <Button x:Name="YesButton" Content="Yes" MinWidth="40" Margin="5,0,0,0"/>
            <Button x:Name="NoButton" Content="No" MinWidth="40" Margin="5,0,0,0"/>
            <Button x:Name="CancelButton" Content="Cancel" MinWidth="40" Margin="5,0,5,0"/>
        </StackPanel>
    </StackPanel>
</Window>
