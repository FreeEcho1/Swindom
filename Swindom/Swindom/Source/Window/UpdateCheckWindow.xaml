<Window x:Class="Swindom.Source.Window.UpdateCheckWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Swindom.Source.Window"
        mc:Ignorable="d"
        Title="確認" Height="350" Width="500" WindowStartupLocation="CenterScreen">
    <Grid Style="{StaticResource BackgroundGrid}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label x:Name="ThereIsTheLatestVersionLabel" Content="最新バージョンがあります。" Grid.Row="0" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        <TextBox x:Name="UpdateHistoryTextBox" Grid.Row="1" TextWrapping="NoWrap" AcceptsReturn="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
        <Button x:Name="OpenWebsiteButton" Content="ウェブサイト" Grid.Row="2" HorizontalAlignment="Center" Width="150" Margin="0,10,0,10"/>
    </Grid>
</Window>
